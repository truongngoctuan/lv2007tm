<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="PhotoSynth.ImageSpace3D"
    Width="550" Height="400" SizeChanged="UserControl_SizeChanged">
    <Grid x:Name="Root" Background="Black">
        <Grid x:Name="LayoutRoot" Background="Black">
            
        </Grid>
        <Slider x:Name="ZoomSlider" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" Width="100" Cursor="Hand" ValueChanged="Slider_ValueChanged" Maximum="30"/>
        <Slider x:Name="RotateX" Height="23" HorizontalAlignment="Left" Margin="0,24,0,0" VerticalAlignment="Top" Width="100" Maximum="360" ValueChanged="RotateX_ValueChanged" />
        <CheckBox Content="Wireframe" Height="16" HorizontalAlignment="Left" Margin="6,53,0,0" Name="checkBox1" VerticalAlignment="Top" Foreground="White" IsThreeState="False" IsChecked="True" Unchecked="checkBox1_Unchecked" Checked="checkBox1_Checked" />
    </Grid>
</UserControl>
