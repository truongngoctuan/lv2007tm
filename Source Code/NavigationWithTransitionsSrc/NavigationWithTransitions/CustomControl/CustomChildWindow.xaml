<controls:ChildWindow x:Class="NavigationWithTransitions.CustomChildWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="300" 
           Title="CustomChildWindow">
    
        <controls:ChildWindow.Style>
        <StaticResource ResourceKey="ChildWindowStyle1" />
    </controls:ChildWindow.Style>
    
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button x:Name="CancelButton" Style="{StaticResource ButtonStyleYellow}" Click="CancelButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,0,75,0" Grid.Row="1">
            <Button.Content>
                <TextBlock Foreground="White">Cancel</TextBlock>
            </Button.Content>
        </Button>
        <Button x:Name="OKButton" Style="{StaticResource ButtonStyleRed}" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,0,225,0" Grid.Row="1" >
            <Button.Content>
                <TextBlock Foreground="White">Ok</TextBlock>
            </Button.Content>
        </Button>
    </Grid>
</controls:ChildWindow>