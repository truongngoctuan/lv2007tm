<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:MatchingFeatureManual" x:Class="MatchingFeatureManual.MainPage"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Canvas x:Name="myCanvas">
        <!--<local:CanvasFeaturePair/>-->
        <StackPanel Orientation="Horizontal" Canvas.Left="10" Canvas.Top="500">
            <Button Click="Button_Click_1">add new pair</Button>
            <Button  Click="Button_Click">delete selected pair</Button>
            <Button Click="Button_Click_2">load pairs</Button>
            <Button Click="Button_Click_3">save pairs</Button>
        </StackPanel>
        
    </Canvas>
    
</UserControl>
