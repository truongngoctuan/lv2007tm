<UserControl x:Class="_3DPresentation.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="Black">
        <DrawingSurface x:Name="drawingSurface" Draw="OnDraw" SizeChanged="OnSizeChanged" />        
        <Slider x:Name="XSlider" Width="200" Height="35" Minimum="-10000" Maximum="10000"  Margin="0,10,0,0" ValueChanged="XSlider_ValueChanged" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <Slider x:Name="YSlider" Width="200" Height="35" Minimum="-10000" Maximum="10000" Margin="0,50,0,0" ValueChanged="YSlider_ValueChanged" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Slider x:Name="ZSlider" Width="200" Height="35" Minimum="-10000" Maximum="10000" Margin="0,90,0,0" ValueChanged="ZSlider_ValueChanged" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Button Content="Start" Width="50" Height="23" Margin="0,10,10,0" Name="button1" Click="button1_Click" VerticalAlignment="Top" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
