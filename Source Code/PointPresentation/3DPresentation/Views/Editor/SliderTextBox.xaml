<UserControl x:Class="_3DPresentation.Views.Editor.SliderTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <StackPanel x:Name="LayoutRoot" Orientation="Horizontal">
        <TextBlock x:Name="tblock" VerticalAlignment="Center" Width="125"></TextBlock>
        <Slider x:Name="sd" Width="100" Height="30" ValueChanged="sd_ValueChanged"></Slider>
        <TextBox x:Name="tbox" Width="50" Height="30" TextChanged="tbox_TextChanged"></TextBox>
    </StackPanel>
</UserControl>
