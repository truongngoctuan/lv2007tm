<UserControl x:Class="_3DPresentation.Views.TourDesign"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:my="clr-namespace:_3DPresentation"
             xmlns:customControlEditor="clr-namespace:_3DPresentation.Views.Editor"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="White" SizeChanged="LayoutRoot_SizeChanged">
        <my:TourControl x:Name="tourControl"/>
        <my:OpenFileControl x:Name="openFile" Label="Add Model" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbModels" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="200"/>
        <customControlEditor:ComboboxCoverFlow x:Name="cbbModel" VerticalAlignment="Bottom" HorizontalAlignment="Center"></customControlEditor:ComboboxCoverFlow>
    </Grid>
</UserControl>
